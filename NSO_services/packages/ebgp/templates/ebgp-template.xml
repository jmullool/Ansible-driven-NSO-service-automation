<config-template xmlns="http://tail-f.com/ns/config/1.0"
                 servicepoint="ebgp">
  <devices xmlns="http://tail-f.com/ns/ncs">
      <device>
      <name>{/device/name}</name>
      <config>
        <interface xmlns="urn:ios">
          <Loopback>
            <name>0</name>
            <ip>
              <address>
                <primary>
                  <address>{address}</address>
                  <mask>255.255.255.255</mask>
                </primary>
              </address>
            </ip>
          </Loopback>
        </interface>
        <router xmlns="urn:ios">
          <bgp>
            <as-no>{as-number}</as-no>
            <neighbor>
              <id>{/device[name!=current()/name]/address}</id>
              <remote-as>{as-number}</remote-as>
              <ebgp-multihop>
                 <max-hop>255</max-hop>
              </ebgp-multihop>
              <update-source>
                 <Loopback>0</Loopback>
              </update-source>
            </neighbor>
            <address-family>
            <ipv4>
              <af>unicast</af>
              <neighbor>
                <id>{/device[name!=current()/name]/address}</id>
                <activate/>
              </neighbor>
            </ipv4>
          </address-family>
          </bgp>
        </router>
        <interface xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <Loopback>
            <id>0</id>
            <ipv4>
              <address>
                <ip>{address}</ip>
                <mask>255.255.255.255</mask>
              </address>
            </ipv4>
          </Loopback>
        </interface>
        <router xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <bgp>
          <bgp-no-instance>
            <id>{as-number}</id>
            <address-family>
              <ipv4>
                <unicast>
                </unicast>
              </ipv4>
            </address-family>
            <neighbor>
              <id>{/device[name!=current()/name]/address}</id>
              <remote-as>{as-number}</remote-as>
              <ebgp-multihop>
                <ttl-value>255</ttl-value>
              </ebgp-multihop>
              <update-source>
                <Loopback>0</Loopback>
              </update-source>
              <address-family>
                <ipv4>
                  <unicast>
                  </unicast>
                </ipv4>
              </address-family>
            </neighbor>
          </bgp-no-instance>
        </bgp>
        </router>
      </config>
    </device>
  </devices>
</config-template>
